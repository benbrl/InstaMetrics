{
  "manifest_version": 3,
  "name": "Instagram Stats Exporter",
  "version": "1.0",
  "permissions": ["activeTab", "scripting", "storage", "clipboardWrite"],
  "content_scripts": [
    {
      "matches": ["*://*.instagram.com/*"],
      "js": ["content.js"]
    }
  ],
  "action": {
      "default_popup": "popup.html",
      "default_icon": {
          "16": "images/icon.png",
          "48": "images/icon.png",
          "128": "images/icon.png"
      }
  },
  "icons": {
      "16": "images/icon.png",
      "48": "images/icon.png",
      "128": "images/icon.png"
  }
}
